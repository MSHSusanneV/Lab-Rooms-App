<h1>SignUp - Create Account</h1>
<form id="form" action="/signup" method="POST">
    <label for="email">Email</label>
    <input type="email" name="email" placeholder="Your email" required>
<br><br>
    <label for="password">Password</label>
    <input id="myPassword" type="password" name="password" placeholder="********" value="" required>
    <!--input id="myPassword" type="password" name="" value=""-->
<br><br>
    <label for="fullName">Name</label>
    <input type="fullName" name="fullName" placeholder="Your full name" required>
<br><br>
    <button type="submit">Create account</button>
  </form>
<br>
  {{#if errorMessage}}
    <div class="error-message">{{ errorMessage }}</div>
  {{/if}}