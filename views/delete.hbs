<h1>Delete Room</h1>
<form id="form" action="/room/{{theRoom._id}}/delete" method="POST">
    <label for="name">Room Name</label>
    <input type="text" name="name" value="{{theRoom.name}}" required>
<br><br>
    <label for="description">Description</label>
    <input type="text" name="description" value="{{theRoom.description}}" required>
    <!--input id="myPassword" type="password" name="" value=""-->
<br><br>
    <label for="imageUrl">Picture</label>
    <input type="url" name="imageUrl" value="{{theRoom.imageUrl}}">
<br><br>
    <label for="review">Review Comment</label>
    <input type="text" name="review" value="{{theRoom.review}}">
<br><br>
    <button type="submit">Delete</button>
  </form>
<br>
  {{#if errorMessage}}
    <div class="error-message">{{ errorMessage }}</div>
  {{/if}}